{
    "name": "otc-sdk",
    "version": "0.6.0",
    "description": "OTC SDK",
    "license": "UNLICENSED",
    "dependencies": {
        "@solana/web3.js": "^1.91.7",
        "ethers": "^6.12.0",
        "lodash": "^4.17.21"
    },
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "browser": "dist.browser/index.js",
    "scripts": {
        "pre-build:node": "rimraf dist && rimraf tsconfig.tsbuildinfo",
        "pre-build:browser": "rimraf dist.browser",
        "build:node": "yarn pre-build:node && tsc -b",
        "build:browser": "yarn pre-build:browser && rollup -c --bundleConfigAsCjs",
        "build": "yarn build:node && yarn build:browser",
        "test": "mocha --timeout 20000 -r ts-node/register ./tests/*.test.ts"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^25.0.7",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-terser": "^0.4.4",
        "@types/chai": "^4.3.7",
        "@types/chai-as-promised": "^7.1.8",
        "@types/lodash": "^4.17.0",
        "@types/mocha": "^10.0.6",
        "@types/node": "^20.12.7",
        "chai": "^4.3.7",
        "chai-as-promised": "^7.1.1",
        "mocha": "^10.4.0",
        "rimraf": "^5.0.5",
        "rollup": "^4.14.3",
        "rollup-plugin-polyfill-node": "^0.13.0",
        "ts-node": "^10.9.2",
        "typescript": "^5.4.5"
    },
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false
    }
}
