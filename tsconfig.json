{
    "include": ["./src/**/*"],
    "compilerOptions": {
        "baseUrl": ".",
        "typeRoots": ["node_modules/@types"],
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "outDir": "dist/esm",
        "rootDir": "./src",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": false,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "skipLibCheck": true
    }
}
